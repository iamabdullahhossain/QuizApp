<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.teacher.CreateRoomActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_700"
        app:navigationIcon="@drawable/ic_action_back"
        app:title="Create Room"
        app:titleTextColor="@color/white" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/nameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Room Name"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/nameET"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/nameTV"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/custom_edit_text"
                android:paddingStart="10dp" />

            <TextView
                android:id="@+id/batchTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameET"
                android:layout_margin="10dp"
                android:text="Batch Name"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/batchET"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/batchTV"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/custom_edit_text"
                android:paddingStart="10dp" />

            <TextView
                android:id="@+id/descriptionTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/batchET"
                android:layout_margin="10dp"
                android:text="Room Description"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/descriptionET"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/descriptionTV"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/custom_edit_text"
                android:paddingStart="10dp" />

            <TextView
                android:id="@+id/roomTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/descriptionET"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"
                android:text="Room Code"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/roomCodeTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/roomTV"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textColor="@color/purple_700"
                android:textSize="30dp"
                tools:text="xy9zxyp12102" />


            <Button
                android:id="@+id/createRoomBTN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/roomCodeTV"
                android:layout_marginStart="40dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="40dp"
                android:text="Create Room" />


        </RelativeLayout>

    </ScrollView>


</RelativeLayout>