<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

    <TextView
        android:id="@+id/headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="MCQ Question"
        android:textColor="@color/purple_700"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/questionET"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/headline"
        android:layout_margin="10dp"
        android:background="@drawable/custom_edit_text"
        android:hint="Question..."
        android:padding="10dp" />

    <EditText
        android:id="@+id/optionOneET"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/questionET"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:hint="Option A"
        android:padding="10dp" />

    <EditText
        android:id="@+id/optionTwoET"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/optionOneET"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:hint="Option B"
        android:padding="10dp" />

    <EditText
        android:id="@+id/optionThreeET"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/optionTwoET"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:hint="Option C"
        android:padding="10dp" />

    <EditText
        android:id="@+id/optionFourET"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/optionThreeET"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:hint="Option D"
        android:padding="10dp" />

    <EditText
        android:id="@+id/totalMarks"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/optionFourET"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:inputType="number"
        android:hint="Marks of this question"
        android:padding="10dp" />

    <TextView
        android:id="@+id/headline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/totalMarks"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Choose Right Answer"
        android:textColor="@color/purple_700"
        android:textSize="16dp" />

